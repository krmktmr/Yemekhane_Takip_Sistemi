@model YemekHaneTakipOtomasyonu.Models.personel_kartlari


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <b>KartNo</b>
    @Html.TextBoxFor(x => x.kartno, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <b>Personel Adi</b>
    @Html.TextBoxFor(x => x.adi, new { @class = "form-control" })
    <br />
    <b>Personel Soyadi</b>
    @Html.TextBoxFor(x => x.soyadi, new { @class = "form-control" })
    <br />
    <b>Unvanı</b>
    @Html.TextBoxFor(x => x.unvani, new { @class = "form-control" })
    <br />
    <b>Şirket</b>
    @Html.DropDownListFor(x => x.sirket.id, (List<SelectListItem>)ViewBag.srktdgr, new { @class = "form-control" })
    <br />
    <b>Departman</b>
    @Html.DropDownListFor(x => x.departman.id, (List<SelectListItem>)ViewBag.dprtdgr, new { @class = "form-control" })
    <br />
    <b>Bolum</b>
    @Html.DropDownListFor(x => x.bolum.id, (List<SelectListItem>)ViewBag.blmdgr, new { @class = "form-control" })
    <br />
    <b>Kontör</b>
    @Html.TextBoxFor(x => x.kalankontor, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Personel Güncelle</button>

}