
@{
    Layout = "~/Views/Shared/_LayoutDenetim.cshtml";
        }

    @using YemekHaneTakipOtomasyonu.Models
    @model List<kod_bolum>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/Index.css" rel="stylesheet" />
<div class="container index">
    <h2>Bölümler</h2>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Bölüm Adi</th>
                    <th>Düzenle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var x in Model)
                    {

                                <tr>
                                    <td>@x.id</td>
                                    <td>@x.aciklama</td>
                                    <td><a href="/Bolum/BolumDuzenle/@x.id" class="btn btn-success">Düzenle</a></td>
                                    <td><a href="/Bolum/BolumSil/@x.id" class="btn btn-danger">Sil</a></td>
                                </tr>
                    }
                    <tr>
                        <td colspan="4"><a href="/Bolum/BolumEkle" class="btn btn-info">Bölüm Ekle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
